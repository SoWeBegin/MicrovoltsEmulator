# Specify the toolchain file
set(CMAKE_TOOLCHAIN_FILE /opt/android-ndk/build/cmake/android.toolchain.cmake)

set(CMAKE_C_COMPILER /opt/android-ndk/toolchains/llvm/prebuilt/linux-x86_64/bin/aarch64-linux-android21-clang)
set(CMAKE_CXX_COMPILER /opt/android-ndk/toolchains/llvm/prebuilt/linux-x86_64/bin/aarch64-linux-android21-clang++)

# Specify the target ABI (armeabi-v7a, arm64-v8a, x86, x86_64)
set(ANDROID_ABI arm64-v8a)

set(CMAKE_CXX_FLAGS "-Wc++11-narrowing")
# where is the target environment located
set(CMAKE_FIND_ROOT_PATH  /opt/android-ndk/toolchains/llvm/prebuilt/linux-x86_64/)

# search programs in the host environment
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM BOTH)

#set(Boost_INCLUDE_DIRS "${CMAKE_FIND_ROOT_PATH}/boost/arm64-v8a/include")

# Specify the API level
set(ANDROID_PLATFORM android-21)

# search headers and libraries in the target environment
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)